<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/click_me"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/_2sdp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/images"
                android:padding="@dimen/_5sdp"
                android:text="Spider Man - Hommecom"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/images"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/exo_icon_pause" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_width="@dimen/_24sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_24sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/exo_icon_play" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/ic_trash" />
            </LinearLayout>


        </RelativeLayout>


        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:id="@+id/dw_progress"
            android:max="100"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:progress="50"
            android:progressBackgroundTint="@color/colorTextGray"
            android:progressTint="@color/colorAccent"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/percentage"
                android:text=""
                android:textSize="@dimen/_10ssp"
                android:visibility="visible"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>